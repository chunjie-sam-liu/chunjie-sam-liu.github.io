---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Sample blog posts - in a real application, you'd fetch these from a CMS or markdown files
const posts = [
  {
    id: 1,
    title: 'Building a Modern Personal Website with Astro',
    excerpt:
      "Discover how to create a fast, modern personal website using Astro's static site generation capabilities.",
    date: '2025-10-23',
    readTime: '5 min read',
    tags: ['Astro', 'Web Development', 'JavaScript'],
    slug: 'building-modern-website-astro',
  },
  {
    id: 2,
    title: 'The Future of Web Development',
    excerpt:
      'Exploring emerging trends and technologies that are shaping the future of web development.',
    date: '2025-10-20',
    readTime: '7 min read',
    tags: ['Web Development', 'Technology', 'Future'],
    slug: 'future-web-development',
  },
  {
    id: 3,
    title: 'TypeScript Best Practices for Large Applications',
    excerpt:
      'Essential TypeScript patterns and practices for building maintainable large-scale applications.',
    date: '2025-10-15',
    readTime: '8 min read',
    tags: ['TypeScript', 'JavaScript', 'Best Practices'],
    slug: 'typescript-best-practices',
  },
];
---

<BaseLayout
  title='Blog - Chunjie Liu'
  description='Read articles about web development, technology, and programming'
>
  <div class='container'>
    <section class='blog-hero fade-in-up'>
      <div class='card'>
        <h1>Blog</h1>
        <p class='lead'>
          Thoughts, ideas, and insights on web development, technology, and
          everything in between.
        </p>
      </div>
    </section>

    <section class='blog-posts'>
      <div class='posts-grid'>
        {
          posts.map((post, index) => (
            <article
              class='post-card card'
              style={`animation-delay: ${index * 0.1}s`}
            >
              <div class='post-meta'>
                <time class='post-date'>
                  {new Date(post.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <span class='post-read-time'>{post.readTime}</span>
              </div>

              <h2 class='post-title'>
                <a href={`/blog/${post.slug}`}>{post.title}</a>
              </h2>

              <p class='post-excerpt'>{post.excerpt}</p>

              <div class='post-tags'>
                {post.tags.map((tag) => (
                  <span class='tag'>{tag}</span>
                ))}
              </div>

              <div class='post-footer'>
                <a href={`/blog/${post.slug}`} class='read-more'>
                  Read More â†’
                </a>
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <section class='blog-cta'>
      <div class='card text-center'>
        <h2>Stay Updated</h2>
        <p>
          Want to be notified when I publish new articles? Follow me on social
          media or check back regularly for updates.
        </p>
        <div class='social-links'>
          <a
            href='https://github.com/chunjie-sam-liu'
            class='btn'
            target='_blank'
            rel='noopener noreferrer'
          >
            Follow on GitHub
          </a>
          <a href='/contact' class='btn btn-outline'> Get in Touch </a>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .blog-hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lead {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .blog-posts {
    margin-bottom: 4rem;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-card {
    animation: fadeInUp 0.6s ease-out both;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .post-card:hover {
    transform: translateY(-3px);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .post-title {
    margin-bottom: 1rem;
  }

  .post-title a {
    color: rgba(255, 255, 255, 0.95);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .post-title a:hover {
    color: #fff;
  }

  .post-excerpt {
    margin-bottom: 1.5rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    background: rgba(255, 255, 255, 0.15);
    color: rgba(255, 255, 255, 0.9);
    padding: 0.3rem 0.8rem;
    border-radius: 12px;
    font-size: 0.85rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .post-footer {
    display: flex;
    justify-content: flex-end;
    margin-top: auto;
  }

  .read-more {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-weight: 600;
    transition:
      color 0.3s ease,
      transform 0.3s ease;
  }

  .read-more:hover {
    color: #fff;
    transform: translateX(5px);
  }

  .blog-cta {
    text-align: center;
  }

  .text-center {
    text-align: center;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.3rem;
    }

    .social-links {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
