---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title='Chunjie Liu - Personal Website'>
  <div class='container'>
    <!-- Hero Section -->
    <section class='hero fade-in-up'>
      <div class='card'>
        <h1>Welcome to My Digital Space</h1>
        <p class='hero-subtitle'>
          I'm Chunjie Liu, a passionate developer and researcher exploring the
          intersection of technology and innovation.
        </p>
        <div class='hero-actions'>
          <a href='/about' class='btn'>Learn More About Me</a>
          <a href='/projects' class='btn btn-outline'>View My Work</a>
        </div>
      </div>
    </section>

    <!-- Quick Overview -->
    <section class='overview'>
      <div class='grid grid-3'>
        <div class='card'>
          <h3>üöÄ Developer</h3>
          <p>
            Building modern web applications with cutting-edge technologies and
            best practices.
          </p>
        </div>
        <div class='card'>
          <h3>üî¨ Researcher</h3>
          <p>
            Exploring new frontiers in technology and contributing to open
            source projects.
          </p>
        </div>
        <div class='card'>
          <h3>üìù Writer</h3>
          <p>
            Sharing insights and knowledge through technical blog posts and
            documentation.
          </p>
        </div>
      </div>
    </section>

    <!-- Recent Work -->
    <section class='recent-work'>
      <div class='card'>
        <h2>Recent Highlights</h2>
        <div class='grid grid-2'>
          <div class='highlight-item'>
            <h3>Latest Project</h3>
            <p>
              Check out my recent work on innovative web applications and tools.
            </p>
            <a href='/projects' class='btn'>View Projects ‚Üí</a>
          </div>
          <div class='highlight-item'>
            <h3>Recent Posts</h3>
            <p>
              Read my latest thoughts on technology, development, and industry
              trends.
            </p>
            <a href='/blog' class='btn'>Read Blog ‚Üí</a>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 4rem;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .overview {
    margin-bottom: 4rem;
  }

  .highlight-item {
    padding: 1rem 0;
  }

  .highlight-item h3 {
    margin-bottom: 0.5rem;
    color: rgba(255, 255, 255, 0.95);
  }

  @media (max-width: 768px) {
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
